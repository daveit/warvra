<%= simple_form_for(@vreceipt) do |f| %>
  <%= f.error_notification %>
    <h3>Village: <%= (@vreceipt.village.name) %>
    </h3>  <div class="form-inputs">
    <%= f.input :rdate, label: 'Receipt Date',:input_html => { :style => 'width: 150px' } %>
    <%= f.input :reference %>
    <%= f.input :finto, label: 'Financial To',:input_html => { :style => 'width: 150px' } %>
    <%= f.input :details %>
    <%= f.association :pay_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save Receipt changes', :class => "btn btn-small btn-success" %>
  </div>
<% end %>
